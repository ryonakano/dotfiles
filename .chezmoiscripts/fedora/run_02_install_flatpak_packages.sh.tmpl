#!/bin/bash

{{ if eq .chezmoi.osRelease.id "fedora" }}

CONFIG_DIR={{ joinPath .chezmoi.sourceDir "config" .chezmoi.osRelease.id | quote }}

FILES=$(find $CONFIG_DIR -name "*.flatpakconf" | sort)
for f in ${FILES[@]}; do
	source $f
	flatpak remote-add --if-not-exists --user $REMOTE_NAME $REMOTE_URL
	flatpak install -y --user $REMOTE_NAME $INSTALL_ID
done

{{ end }}
